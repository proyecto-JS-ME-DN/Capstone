<!DOCTYPE html>
<html lang="es-es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Servicios</title>
    <%- include('partials/estilos') %>
</head>
<body class="sub_page">
    <%- include('partials/navigation_bar') %>

    <div class="servicio">
        <h1>Formulario Agenda</h1>
        <form action="servicio" method="post" class="margen-arriba">

            <label for="nombre">Nombre completo</label>
            <input class="form-control" type="text" name="nombre" required>

            <label for="correo">Correo electronico</label>
            <input class="form-control" type="text" name="correo" required>

            <label for="patente">Patente</label>
            <input class="form-control" type="text" name="patente" required>

            <label for="marca">Marca</label>
            <select class="form-control" name="marca" id="marca" >
                <option value="Peugeot" selected>Peugeot</option>
                <option value="Fiat">Fiat</option>
                <option value="Toyota">Toyota</option>
            </select>

            <label for="tipo">Tipo de servicio</label>
            <select class="form-control" name="tipo" id="tipo">
                <option value="Consulta" selected>Consulta</option>
                <option value="Servicio">Servicio</option>
            </select>

            <label for="fecha">Fecha de atencion</label>
            <input class="form-control" type="date" name="fecha" id="fecha">

            <label for="hora">Hora de atencion</label>
            <input class="form-control" type="time" name="hora" id="hora">
            
            <div style="display: inline;" >
                <!--<a href="/" class="btn-cancel">Cancel</a>-->
                <input  type="submit" class="btn btn-success margen-arriba" value="Guardar" >
            </div>
        </form>
    </div>


    <%- include('partials/sweetalert') %>
    <%- include('partials/servicesection') %>
</body>
<%- include('partials/sub_footer') %>
<%- include('partials/footer') %>
<%- include('partials/scripts') %>
</html>